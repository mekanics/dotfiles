# Timeout for commands executed by starship (in milliseconds). (default: 500)
command_timeout = 1000

# Displays text, typically a single character,
# based on the status of the previous command.
[character]
error_symbol = "[✖](bold red)" # used if previous command failed

[status]
symbol = ""
format = '[$symbol$status]($style) '
map_symbol = true
disabled = false

# Displays current directory.
[directory]
format = "[$path]($style)[$lock_symbol]($lock_style)"
style = "yellow"
truncate_to_repo = false
truncation_length = 3 
truncation_symbol = "…/"

[directory.substitutions]
"Documents" = ""
"Downloads" = ""
"Music" = ""
"Pictures" = ""
"Development" = ""


[battery]
full_symbol = "🔋 "
charging_symbol = "🔌 "
discharging_symbol = "⚡ "

[[battery.display]]
threshold = 30
style = "bold red"

[cmd_duration]
min_time = 10_000  # Show command duration over 10,000 milliseconds (=10 sec)
format = " took [$duration]($style)"    

[time]
time_format = "%T"
format = "🕙 $time($style) "
style = "bright-white"
disabled = true

[username]
style_user = "bold dimmed blue"
show_always = false
style_root = "bg:#DA627D"

[git_branch]
format = " [$symbol$branch]($style) "
style = "bold yellow"

[git_commit]
commit_hash_length = 8
style = "bold white"
tag_disabled = false

[git_state]
format = '[\($state( $progress_current of $progress_total)\)]($style)'


[hostname]
ssh_only = true
format = "<[$hostname]($style)>"
trim_at = "-"
style = "bold dimmed white"
disabled = true

[memory_usage]
format = "$symbol[${ram}( | ${swap})]($style) "
threshold = 70
style = "bold dimmed white"
disabled = false

[package]
disabled = true

[shell]
fish_indicator = ""
powershell_indicator = "_"
unknown_indicator = "mystery shell"
style = "cyan bold"
disabled = true

[nodejs]
format = "[$symbol$version](bold green) "

[python]
format = '[${symbol}${pyenv_prefix}(${version} )(\($virtualenv\) )]($style)'
style = "bold green"

[docker_context]
format = "[$symbol$context]($style) "
symbol = "🐋 "

[aws]
format = '[$symbol($profile )(\($region\) )(\[$duration\])]($style)'	

[rust]
format = "[$symbol($version )]($style)"

[php]
format = "[$symbol($version )]($style)"